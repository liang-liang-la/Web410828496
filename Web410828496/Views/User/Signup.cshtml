@model Web410828496.ViewModels.SignUpData

@{
    ViewBag.Title = "Signup";
}

<h2>會員註冊</h2>

@using (Html.BeginForm("Signup", "User", FormMethod.Post))
{
    <p>
        @Html.DisplayNameFor(m => m.Name) @Html.TextBoxFor(m => m.Name)
        @Html.ValidationMessageFor(m => m.Name)
    </p>

    <p>
        @Html.DisplayNameFor(m => m.Account) @Html.TextBoxFor(m => m.Account)
        @Html.ValidationMessageFor(m => m.Account)
    </p>

    <p>
        @Html.DisplayNameFor(m => m.Password)@Html.TextBoxFor(m => m.Password)
        @Html.ValidationMessageFor(m => m.Password)
    </p>

    <p>@Model.Message</p>
    <input type="submit" name="送出" />
}